{
  "manifest_version": 3,

  "name": "Gerrit Monitor",
  "description": "Monitor your CLs on Gerrit",
  "version": "2.0.0",

  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],

  "optional_permissions": [
    "notifications"
  ],

  "host_permissions": [
    "http://*/",
    "https://*/"
  ],

  "options_page": "options.html",

  "action": {
    "default_icon": {
      "24": "img/ic_assignment_black_24dp_1x.png",
      "48": "img/ic_assignment_black_24dp_2x.png"
    },
    "default_title": "Unknown",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "badge.js",
    "type": "module"
  }
}
